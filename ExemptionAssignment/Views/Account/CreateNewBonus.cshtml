@model NewBonusSavingsAccountViewModel
@{

}
<div style="height:100%; width:100%;">
    <div class="row">
        <div class="jumbotron h4"> Enter details for new bonus savings account</div>
    </div>
    <form class="form" asp-controller="Account" asp-action="CreateNewBonus" enctype="multipart/form-data" name="upload" method="post">
        @if (!string.IsNullOrEmpty(Model.DisplayMessage))
        {
            <div class="row">
                <div class="alert alert-warning">
                    <span class="glyphicon glyphicon-warning-sign"></span>
                    @Model.DisplayMessage
                </div>
            </div>
        }
        <div class="row">
            <p>Choose one or more account owners</p>
            @for (int i = 0; i < Model.CustomerList.Count; i++)
            {
                <div class="checkbox" style="margin-left: 20px;">
                    <input asp-for="@Model.CustomerList[i].IsSelected" type="checkbox" />
                    <label asp-for="@Model.CustomerList[i].CustomerID">
                        @Model.CustomerList[i].ContactInformation.FirstName @Model.CustomerList[i].ContactInformation.LastName
                    </label>
                    <input asp-for="@Model.CustomerList[i].CustomerID" type="hidden" />
                    <input asp-for="@Model.CustomerList[i].ContactInformation.LastName" type="hidden" />
                    <input asp-for="@Model.CustomerList[i].ContactInformation.FirstName" type="hidden" />
                </div>
            }
        </div>
        <div class="row">
            <label class="control-label">Initial Balance</label>
            <input class="form-control" type="number" step="0.01" asp-for="@Model.InitialBalance" min="0" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Create Account</button>

    </form>
</div>