@model ViewAccountByIdViewModel

<div style="height:100%; width:100%;">
    <div class="row">
        <div class="jumbotron h4"> Select the account you wish to view</div>
    </div>
    @if (Model.Accounts.Count < 1)
    {
        <div class="row">
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-warning-sign"></span>
                No accounts found for that customer.
            </div>
        </div>
    }
    else
    {
        @foreach (var account in Model.Accounts)
        {
            <div class="well well-lg">
                <div class="row">
                    <div class="col-md-3">
                        ID: @account.AccountID
                    </div>
                    <div class="col-md-3">
                        Balance: @account.Balance
                    </div>
                </div>
                <div class="text-right">
                    <a href="@Url.Action(account.Action,"Account", new { id = account.AccountID})" class="btn btn-primary">View Account</a>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        Interest Rate: @account.InterestRate
                    </div>
                    <div class="col-md-3">
                        Type: @account.Type
                    </div>
                </div>
            </div>

        }

    }

</div>